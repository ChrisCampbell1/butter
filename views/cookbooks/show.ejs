<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
<h1><%= title %></h1>
<% if (cookbook.recipes.length) { %>
  <div class="recipe-container">
    <% cookbook.recipes.forEach(recipe => { %>
      <div class="recipe-card">
        <a href="/recipes/<%= recipe._id %>"><img src="<%= recipe.image %>" alt="<%= recipe.label %> photo"></a>
        <a href="/recipes/<%= recipe._id %>"><h3><%= recipe.label %></h3></a>
        <p>Ingredient Count: <%= recipe.ingredients.length %></p>
        <p>Number of Steps: <%= recipe.instructions.length %></p>
        <form action="/cookbooks/<%= cookbook._id %>/remove/<%= recipe._id %>?_method=DELETE" method="post">
          <button type="submit">Remove from Cookbook</button>
          </form>
      </div>
    <% }) %>
  </div>
<% } else { %>
  <h2><a href="/recipes">Let's add some recipes!</a></h2>
<% } %> 
</main>

<%- include('../partials/footer') %>
