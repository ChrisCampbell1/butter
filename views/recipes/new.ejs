<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
<h1><%= title %></h1>
<form action="/recipes" method="POST">
  <label for="label-input">Name:</label>
  <input type="text" name="label" id="label-input" placeholder="Recipe Name">
  <label for="description-input">Description:</label>
  <textarea name="description" id="description-input" placeholder="Description"></textarea>
  <label for="ingredients-input">Ingredients:</label>
  <textarea name="ingredients" id="ingredients-input" placeholder="one ingredient per line"></textarea>
  <label for="instructions-input">Instructions:</label>
  <textarea name="instructions" id="instructions-input" placeholder="one step per line"></textarea>
  <label for="img-input">Image Address:</label>
  <input type="text" id="img-input" name="image" placeholder="copy URL here">
  <button type="submit">Save Recipe</button>
</form>
</main>

